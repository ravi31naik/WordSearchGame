@code {
    [Parameter] public EventCallback<(List<string> Words, int Size)> OnGameStart { get; set; }

    private string _customInput = "";
    private string _validationMessage = "";
    private int _gridSize = 12;

    private readonly Dictionary<string, List<string>> _categories = new()
    {
        { "Animals", new() { "LION", "TIGER", "ZEBRA", "PANDA", "KOALA", "EAGLE", "SHARK", "WHALE", "WOLF", "FOX", "BEAR", "HAWK" } },
        { "Technology", new() { "PIXEL", "DATA", "WIFI", "CYBER", "ROBOT", "LASER", "CODE", "CLOUD", "MOUSE", "SCREEN", "LOGIC" } },
        { "Food", new() { "PIZZA", "TACO", "SUSHI", "CAKE", "PASTA", "BURGER", "SALAD", "BREAD", "FRUIT", "CANDY", "SOUP" } },
        { "Countries", new() { "JAPAN", "ITALY", "EGYPT", "BRAZIL", "INDIA", "CHINA", "SPAIN", "KENYA", "CHILE", "USA", "PERU" } }
    };

    private async Task StartCategory(string category)
    {
        if (_categories.TryGetValue(category, out var words))
        {
             // Filter system words to match grid size
             var validWords = words.Where(w => w.Length <= _gridSize).ToList();
             if (validWords.Any())
             {
                await OnGameStart.InvokeAsync((validWords, _gridSize));
             }
        }
    }

    private async Task StartCustom()
    {
        if (string.IsNullOrWhiteSpace(_customInput)) return;
        
        _validationMessage = "";

        var rawWords = _customInput
            .Split(new[] { ',', '\n', '\r' }, StringSplitOptions.RemoveEmptyEntries)
            .Select(w => w.Trim().ToUpperInvariant())
            .ToList();

        var validWords = new List<string>();
        var rejectedWords = new List<string>();

        foreach (var word in rawWords)
        {
            if (word.Length >= 3 && word.Length <= _gridSize)
            {
                validWords.Add(word);
            }
            else
            {
                rejectedWords.Add(word);
            }
        }

        if (rejectedWords.Any())
        {
            var examples = string.Join(", ", rejectedWords.Take(3));
            var suffix = rejectedWords.Count > 3 ? "..." : "";
            _validationMessage = $"‚ö†Ô∏è Excluded {rejectedWords.Count} word(s) (must be 3-{_gridSize} letters): {examples}{suffix}";
        }

        if (validWords.Any())
        {
             await OnGameStart.InvokeAsync((validWords, _gridSize));
        }
        else if (rejectedWords.Any())
        {
            _validationMessage = "‚ùå No valid words found. Check word lengths.";
        }
    }
}
