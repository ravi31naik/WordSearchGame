@using Microsoft.AspNetCore.Components.Web

<div class="main-menu">
    <h1>Word Search</h1>
    <p class="subtitle">Select a category or create your own!</p>

    <div class="menu-section">
        <h2>Settings</h2>
        <div class="setting-row">
            <label>Grid Size: <strong>@_gridSize x @_gridSize</strong></label>
            <input type="range" min="8" max="12" step="1" @bind="_gridSize" @bind:event="oninput" />
        </div>
    </div>

    <div class="menu-section">
        <h2>Categories</h2>
        <div class="category-grid">
            <button class="menu-btn" @onclick="@(() => StartCategory("Animals"))">ü¶Å Animals</button>
            <button class="menu-btn" @onclick="@(() => StartCategory("Technology"))">üíª Technology</button>
            <button class="menu-btn" @onclick="@(() => StartCategory("Food"))">üçï Food</button>
            <button class="menu-btn" @onclick="@(() => StartCategory("Countries"))">üåé Countries</button>
        </div>
    </div>

    <div class="menu-section">
        <h2>Custom Game</h2>
        <textarea @bind="_customInput" placeholder="Enter words separated by commas or new lines..."></textarea>
        
        @if (!string.IsNullOrEmpty(_validationMessage))
        {
            <div class="validation-message">
                @_validationMessage
            </div>
        }

        <button class="menu-btn primary" @onclick="StartCustom" disabled="@string.IsNullOrWhiteSpace(_customInput)">
            ‚ñ∂ Play Custom
        </button>
    </div>
</div>

